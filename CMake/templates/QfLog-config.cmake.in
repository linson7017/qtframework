INCLUDE(FindPackageHandleStandardArgs)
# Look for the header file
if(NOT QFLOG_INCLUDE_DIR)
	FIND_PATH(	QFLOG_INCLUDE_DIR 
		NAMES qf_config.h
		PATHS @QF_SOURCE_DIRECTORY@/include/log
	)
endif()
MARK_AS_ADVANCED(QFLOG_INCLUDE_DIR)

FIND_PACKAGE_HANDLE_STANDARD_ARGS(QFLOG REQUIRED_VARS QFLOG_INCLUDE_DIR)

IF(QFLOG_FOUND)
	message("qflog found!")
	SET(QFMAIN_INCLUDE_DIRS ${QFLOG_INCLUDE_DIR})
	include_directories(${QFLOG_INCLUDE_DIR})
ELSE(QFLOG_FOUND)
	message("qflog notfound!")
	SET(QFLOG_INCLUDE_DIR)
ENDIF(QFLOG_FOUND)